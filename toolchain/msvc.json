{
    "version": 6,
    "configurePresets": [
        {
            "name": "msvc-common-base",
            "description": "MSVC build types",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_TRY_COMPILE_TARGET_TYPE": "STATIC_LIBRARY",
                "CMAKE_CXX_FLAGS_INIT": "$env{MSVC_ARCHITECTURE} $env{MSVC_OPTIMIZATION_LEVEL} $env{MSVC_CXX_WARNINGS} $env{MSVC_CXX_FLAGS} $env{MSVC_GC_SECTIONS}",
                "CMAKE_C_FLAGS_INIT": "$env{MSVC_ARCHITECTURE} $env{MSVC_OPTIMIZATION_LEVEL} $env{MSVC_C_WARNINGS} $env{MSVC_C_FLAGS} $env{MSVC_GC_SECTIONS}",
                "CMAKE_ASM_FLAGS_INIT": "$env{MSVC_ARCHITECTURE} $env{MSVC_ASM_FLAGS}",
                "CMAKE_EXE_LINKER_FLAGS_INIT": "$env{MSVC_LINK_OPTIONS} $env{MSVC_GC_SECTIONS}"
            }
        },
        {
            "name": "msvc-x86_64",
            "description": "MSVC x86_64 Windows toolchain",
            "hidden": true,
            "inherits": "msvc-common-base",
            "cacheVariables": {
                "CMAKE_SYSTEM_PROCESSOR": "x86_64",
                "CMAKE_CXX_COMPILER": "cl.exe",
                "CMAKE_C_COMPILER": "cl.exe",
                "CMAKE_ASM_COMPILER": "ml64.exe"
            }
        },
        {
            "name": "msvc-pedantic-warnings",
            "hidden": true,
            "description": "MSVC pedantic warnings",
            "environment": {
                "MSVC_C_WARNINGS": "/W4 /permissive-",
                "MSVC_CXX_WARNINGS": "/W4 /permissive-"
            }
        },
        {
            "name": "msvc-reasonable-warnings",
            "hidden": true,
            "description": "MSVC reasonable warnings",
            "environment": {
                "MSVC_C_WARNINGS": "/W3 /permissive-",
                "MSVC_CXX_WARNINGS": "/W3 /permissive-"
            }
        },
        {
            "name": "msvc-optimize-for-size",
            "description": "MSVC optimize for size",
            "hidden": true,
            "environment": {
                "MSVC_OPTIMIZATION_LEVEL": "/Os"
            }
        }
    ]
}