{
    "version": 6,
    "configurePresets": [
        {
            "name": "msvc-build-types",
            "description": "MSVC build types",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_TRY_COMPILE_TARGET_TYPE": "STATIC_LIBRARY",
                "CMAKE_CXX_FLAGS_INIT": "",
                "CMAKE_CXX_FLAGS_DEBUG_INIT": "/W3 /Zi /Mtd",
                "CMAKE_CXX_FLAGS_RELEASE_INIT": "/W3 /MT",
                "CMAKE_C_FLAGS_INIT": "",
                "CMAKE_C_FLAGS_DEBUG_INIT": "/W3 /Zi /Mtd",
                "CMAKE_C_FLAGS_RELEASE_INIT": "/W3 /MT",
                "CMAKE_ASM_FLAGS_INIT": "",
                "CMAKE_EXE_LINKER_FLAGS_INIT": ""
            }
        },
        {
            "name": "msvc-pedantic-warnings",
            "hidden": true,
            "description": "MSVC pedantic warnings",
            "environment": {
                "CFLAGS": "/W4 /permissive-",
                "CXXFLAGS": "/W4 /permissive-"
            }
        },
        {
            "name": "msvc-x86_64",
            "description": "MSVC x86_64 Windows toolchain",
            "hidden": true,
            "inherits": "msvc-build-types",
            "cacheVariables": {
                "CMAKE_SYSTEM_PROCESSOR": "x86_64",
                "CMAKE_CXX_COMPILER": "cl.exe",
                "CMAKE_C_COMPILER": "cl.exe",
                "CMAKE_ASM_COMPILER": "ml64.exe"
            }
        }
    ]
}