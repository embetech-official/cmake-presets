{
    "version": 6,
    "configurePresets": [
        {
            "name": "msvc-common-base",
            "description": "MSVC build types",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_TRY_COMPILE_TARGET_TYPE": "STATIC_LIBRARY",
                "CMAKE_CXX_FLAGS_INIT": "$env{ARCHITECTURE} $env{OPTIMIZATION_LEVEL} $env{CXX_WARNINGS} $env{CXX_FLAGS} $env{GC_SECTIONS}",
                "CMAKE_CXX_FLAGS_DEBUG_INIT": "/Zi /Mtd",
                "CMAKE_CXX_FLAGS_RELEASE_INIT": "/MT",
                "CMAKE_C_FLAGS_INIT": "$env{ARCHITECTURE} $env{OPTIMIZATION_LEVEL} $env{C_WARNINGS} $env{C_FLAGS} $env{GC_SECTIONS}",
                "CMAKE_C_FLAGS_DEBUG_INIT": "/Zi /Mtd",
                "CMAKE_C_FLAGS_RELEASE_INIT": "/W3 /MT",
                "CMAKE_ASM_FLAGS_INIT": "$env{ARCHITECTURE} $env{ASM_FLAGS}",
                "CMAKE_EXE_LINKER_FLAGS_INIT": "$env{LINK_OPTIONS} $env{GC_SECTIONS}"
            }
        },
        {
            "name": "msvc-x86_64",
            "description": "MSVC x86_64 Windows toolchain",
            "hidden": true,
            "inherits": "msvc-common-base",
            "cacheVariables": {
                "CMAKE_SYSTEM_PROCESSOR": "x86_64",
                "CMAKE_CXX_COMPILER": "cl.exe",
                "CMAKE_C_COMPILER": "cl.exe",
                "CMAKE_ASM_COMPILER": "ml64.exe"
            }
        },
        {
            "name": "msvc-pedantic-warnings",
            "hidden": true,
            "description": "MSVC pedantic warnings",
            "environment": {
                "C_WARNINGS": "/W4 /permissive-",
                "CXX_WARNINGS": "/W4 /permissive-"
            }
        },
        {
            "name": "msvc-reasonable-warnings",
            "hidden": true,
            "description": "MSVC reasonable warnings",
            "environment": {
                "C_WARNINGS": "/W3 /permissive-",
                "CXX_WARNINGS": "/W3 /permissive-"
            }
        },
        {
            "name": "msvc-optimize-for-size",
            "description": "MSVC optimize for size",
            "hidden": true,
            "environment": {
                "OPTIMIZATION_LEVEL": "/Os"
            }
        }
    ]
}