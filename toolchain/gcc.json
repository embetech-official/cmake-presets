{
    "version": 6,
    "configurePresets": [
        {
            "name": "gcc-common-base",
            "description": "GCC build flags",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_TRY_COMPILE_TARGET_TYPE": "STATIC_LIBRARY",
                "CMAKE_CXX_FLAGS_INIT": "$env{ARCHITECTURE} $env{OPTIMIZATION_LEVEL} $env{CXX_WARNINGS} $env{CXX_FLAGS} $env{GC_SECTIONS}",
                "CMAKE_CXX_FLAGS_DEBUG_INIT": "-g3",
                "CMAKE_CXX_FLAGS_RELEASE_INIT": "-DNDEBUG",
                "CMAKE_C_FLAGS_INIT": "$env{ARCHITECTURE} $env{OPTIMIZATION_LEVEL} $env{C_WARNINGS} $env{C_FLAGS} $env{GC_SECTIONS}",
                "CMAKE_C_FLAGS_DEBUG_INIT": "-g3",
                "CMAKE_C_FLAGS_RELEASE_INIT": "-DNDEBUG",
                "CMAKE_ASM_FLAGS_INIT": "-x assembler-with-cpp $env{ARCHITECTURE} $env{ASM_FLAGS}",
                "CMAKE_EXE_LINKER_FLAGS_INIT": "$env{LINK_OPTIONS} $env{GC_SECTIONS}"
            }
        },
        {
            "name": "gcc-arm-none-eabi",
            "description": "GCC AArch32 bare-metal toolchain",
            "hidden": true,
            "inherits": "gcc-common-base",
            "cacheVariables": {
                "CMAKE_SYSTEM_NAME": "Generic-ELF",
                "CMAKE_SYSTEM_PROCESSOR": "arm",
                "CMAKE_CXX_COMPILER": "arm-none-eabi-g++",
                "CMAKE_C_COMPILER": "arm-none-eabi-gcc",
                "CMAKE_ASM_COMPILER": "arm-none-eabi-gcc"
            }
        },
        {
            "name": "gcc-arm-none-linux-gnueabihf",
            "description": "GCC AArch32 GNU/Linux with HF toolchain",
            "hidden": true,
            "inherits": "gcc-common-base",
            "cacheVariables": {
                "CMAKE_SYSTEM_NAME": "Linux",
                "CMAKE_SYSTEM_PROCESSOR": "arm",
                "CMAKE_CXX_COMPILER": "arm-none-linux-gnueabihf-g++",
                "CMAKE_C_COMPILER": "arm-none-linux-gnueabihf-gcc",
                "CMAKE_ASM_COMPILER": "arm-none-linux-gnueabihf-gcc"
            }
        },
        {
            "name": "gcc-x86_64-linux-gnu",
            "description": "GCC x86_64 Linux/GNU toolchain",
            "hidden": true,
            "inherits": "gcc-common-base",
            "cacheVariables": {
                "CMAKE_SYSTEM_NAME": "Linux",
                "CMAKE_SYSTEM_PROCESSOR": "x86_64-linux-gnu",
                "CMAKE_CXX_COMPILER": "x86_64-linux-gnu-g++",
                "CMAKE_C_COMPILER": "x86_64-linux-gnu-gcc",
                "CMAKE_ASM_COMPILER": "x86_64-linux-gnu-gcc"
            }
        },
        {
            "name": "gcc-x86_64-w64-mingw32",
            "description": "GCC x86_64 Windows/GNU toolchain",
            "hidden": true,
            "inherits": "gcc-common-base",
            "cacheVariables": {
                "CMAKE_SYSTEM_NAME": "Windows",
                "CMAKE_SYSTEM_PROCESSOR": "x86_64-w64-mingw32",
                "CMAKE_CXX_COMPILER": "x86_64-w64-mingw32-g++",
                "CMAKE_C_COMPILER": "x86_64-w64-mingw32-gcc",
                "CMAKE_ASM_COMPILER": "x86_64-w64-mingw32-gcc"
            }
        },
        {
            "name": "gcc-any",
            "description": "GCC any available toolchain",
            "hidden": true,
            "inherits": "gcc-common-base",
            "cacheVariables": {
                "CMAKE_CXX_COMPILER": "g++",
                "CMAKE_C_COMPILER": "gcc",
                "CMAKE_ASM_COMPILER": "gcc"
            }
        },
        {
            "name": "gcc-reasonable-warnings",
            "hidden": true,
            "description": "GCC reasonable warnings",
            "environment": {
                "C_WARNINGS": " -Wall -Wextra",
                "CXX_WARNINGS": "-Wall -Wextra"
            }
        },
        {
            "name": "gcc-pedantic-warnings",
            "hidden": true,
            "description": "GCC pedantic warnings",
            "environment": {
                "C_WARNINGS": " -Wpedantic -Wunused-parameter -Winit-self -Wcast-align -Wconversion -Wnull-dereference -Wduplicated-cond  -Wsign-conversion -Wlogical-op",
                "CXX_WARNINGS": "-Wpedantic -Wunused-parameter -Winit-self -Wcast-align -Wconversion -Wnull-dereference -Wduplicated-cond  -Wsign-conversion -Wlogical-op"
            }
        },
        {
            "name": "gcc-optimize-for-size",
            "description": "GCC optimize for size",
            "hidden": true,
            "environment": {
                "OPTIMIZATION_LEVEL": "-Os",
                "GC_SECTIONS": "-ffunction-sections -fdata-sections -Wl,--gc-sections -Wl,--print-memory-usage"
            }
        }
    ]
}