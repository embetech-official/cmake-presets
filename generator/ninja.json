{
    "version": 6,
    "configurePresets": [
        {
            "name": "ninja",
            "description": "Use Ninja generator",
            "hidden": true,
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
            }
        },
        {
            "name": "ninja-debug",
            "description": "Use Ninja with debug configuration",
            "hidden": true,
            "inherits": "ninja",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "ninja-release",
            "description": "Use Ninja with release configuration",
            "hidden": true,
            "inherits": "ninja",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        }
    ]
}